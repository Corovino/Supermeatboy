import java.awt.event.KeyEvent;


public class MeatBoyRunnable implements Runnable {
	private MeatBoyInput input;
	private MeatBoy meatboy;
	private double gravity;
	private int ground;
	public MeatBoyRunnable(MeatBoyInput i, MeatBoy m){
		ground =m.getY();
		gravity =.5;
		input=i;
		meatboy =m;
	}
	public void run() {
		while(meatboy.isAlive()){
			if(!meatboy.isInAir()){
				if(input.isKeyPressed(KeyEvent.VK_UP)){
					meatboy.setYVel(-10);
				}
			}
			else{
				meatboy.setYVel(meatboy.getYVel()+gravity);
			}
			if(input.isKeyPressed(KeyEvent.VK_LEFT)){
				meatboy.setXVel(-2);
			}
			else if(input.isKeyPressed(KeyEvent.VK_RIGHT)){
				meatboy.setXVel(2);
			}
			else{
				meatboy.setXVel(0);
			}

			try {
				Thread.sleep(17);	
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		
	}

}
